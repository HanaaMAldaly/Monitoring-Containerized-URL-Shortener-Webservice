{
  "id": null,
  "uid": "shortener-basic",
  "title": "URL Shortener - Basic Metrics",
  "timezone": "browser",
  "schemaVersion": 34,
  "version": 1,
  "panels": [
    {
      "type": "graph",
      "title": "Total Requests (rate)",
      "targets": [
        {
          "expr": "sum(rate(http_requests_total[5m]))",
          "refId": "A"
        }
      ],
      "gridPos": {"x":0,"y":0,"w":12,"h":8},
      "id": 1
    },
    {
      "type": "graph",
      "title": "Requests by endpoint (rate)",
      "targets": [
        {
          "expr": "sum(rate(http_requests_total[5m])) by (endpoint)",
          "refId": "A"
        }
      ],
      "gridPos": {"x":12,"y":0,"w":12,"h":8},
      "id": 2
    },
    {
      "type": "graph",
      "title": "URL creations (rate)",
      "targets": [
        {
          "expr": "rate(urls_created_total[5m])",
          "refId": "A"
        }
      ],
      "gridPos": {"x":0,"y":8,"w":12,"h":6},
      "id": 3
    },
    {
      "type": "graph",
      "title": "QR generated (rate)",
      "targets": [
        {
          "expr": "rate(qr_generated_total[5m])",
          "refId": "A"
        }
      ],
      "gridPos": {"x":12,"y":8,"w":12,"h":6},
      "id": 4
    },
    {
      "type": "graph",
      "title": "Redirects success/fail (rate)",
      "targets": [
        {
          "expr": "rate(redirect_total{status=\"success\"}[5m])",
          "refId": "A"
        },
        {
          "expr": "rate(redirect_total{status=\"fail\"}[5m])",
          "refId": "B"
        }
      ],
      "gridPos": {"x":0,"y":14,"w":24,"h":6},
      "id": 5
    },
    {
      "type": "graph",
      "title": "Request latency (p95)",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le, endpoint))",
          "refId": "A"
        }
      ],
      "gridPos": {"x":0,"y":20,"w":24,"h":6},
      "id": 6
    }
  ],
  "refresh": "10s",
  "time": {"from":"now-1h","to":"now"}
}

